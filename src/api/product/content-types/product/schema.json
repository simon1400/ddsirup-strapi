{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": "E-shop product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "name": {
      "pluginOptions": { "i18n": { "localized": true } },
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "description": {
      "pluginOptions": { "i18n": { "localized": true } },
      "type": "richtext"
    },
    "shortDescription": {
      "pluginOptions": { "i18n": { "localized": true } },
      "type": "text"
    },
    "price": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "compareAtPrice": {
      "type": "decimal",
      "min": 0
    },
    "sku": {
      "type": "string",
      "unique": true
    },
    "stock": {
      "type": "integer",
      "default": 0,
      "min": 0
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["images"]
    },
    "thumbnail": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "inversedBy": "products"
    },
    "variants": {
      "type": "component",
      "repeatable": true,
      "component": "shop.product-variant"
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "weight": {
      "type": "decimal",
      "min": 0
    },
    "seoTitle": {
      "pluginOptions": { "i18n": { "localized": true } },
      "type": "string"
    },
    "seoDescription": {
      "pluginOptions": { "i18n": { "localized": true } },
      "type": "text"
    }
  }
}
